<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.letv.portal.dao.IDictionaryTypeDao" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.letv.portal.model.DictionaryTypeModel" >
	<result column="ID" property="id"/>
	<result column="NAME" property="name"/>
	<result column="CODE" property="code"/>
	<result column="TYPE" property="type"/>
	<result column="LEVEL" property="level"/>
	<result column="STAUS" property="staus"/>
	<result column="IS_REFERENCE" property="isReference"/>
	<result column="DATA_STRUCTURE" property="dataStructure"/>

</resultMap>
       
<!-- DICTIONARY_TYPE_INFO table all fields -->
<sql id="Base_Column_List" >
	 ID,NAME,CODE,TYPE,LEVEL,STAUS,IS_REFERENCE,DATA_STRUCTURE
</sql>
   
   
<!-- 查询条件 -->
<sql id="Example_Where_Clause">
where 1=1
<trim  suffixOverrides="," >
	<if test="id != null  ">
		and ID=#{id}
	</if>
	<if test="name != null  and name != '' ">
		and NAME=#{name}
	</if>
	<if test="code != null  and code != '' ">
		and CODE=#{code}
	</if>
	<if test="type != null  ">
		and TYPE=#{type}
	</if>
	<if test="level != null  ">
		and LEVEL=#{level}
	</if>
	<if test="staus != null  ">
		and STAUS=#{staus}
	</if>
	<if test="isReference != null  ">
		and IS_REFERENCE=#{isReference}
	</if>
	<if test="dataStructure != null  and dataStructure != '' ">
		and DATA_STRUCTURE=#{dataStructure}
	</if>
</trim>
</sql>
   

<!-- 插入记录 -->
<insert id="insert" parameterType="com.letv.portal.model.DictionaryTypeModel" >
  insert into DICTIONARY_TYPE_INFO(ID,NAME,CODE,TYPE,LEVEL,STAUS,IS_REFERENCE,DATA_STRUCTURE)
 values(#{id},#{name},#{code},#{type},#{level},#{staus},#{isReference},#{dataStructure})
</insert>

<!-- 根据id，修改记录-->  
 <update id="update" parameterType="com.letv.portal.model.DictionaryTypeModel" >
  update DICTIONARY_TYPE_INFO set NAME=#{NAME},CODE=#{CODE},TYPE=#{TYPE},LEVEL=#{LEVEL},STAUS=#{STAUS},IS_REFERENCE=#{IS_REFERENCE},DATA_STRUCTURE=#{DATA_STRUCTURE} where ID=#{id}
 </update>
 
 <!--  -->
<update id="updateBySelective" parameterType="com.letv.portal.model.DictionaryTypeModel" >
	update DICTIONARY_TYPE_INFO set 
	<trim  suffixOverrides="," >
	<if test="name != null  and name != '' ">
		NAME=#{name},
	</if>
	<if test="code != null  and code != '' ">
		CODE=#{code},
	</if>
	<if test="type != null  ">
		TYPE=#{type},
	</if>
	<if test="level != null  ">
		LEVEL=#{level},
	</if>
	<if test="staus != null  ">
		STAUS=#{staus},
	</if>
	<if test="isReference != null  ">
		IS_REFERENCE=#{isReference},
	</if>
	<if test="dataStructure != null  and dataStructure != '' ">
		DATA_STRUCTURE=#{dataStructure},
	</if>
	</trim> where ID=#{id}
</update>

<!-- 逻辑删除，将deleted 改成 1 -->
<update id="delete" parameterType="com.letv.portal.model.DictionaryTypeModel">
	delete 	 from DICTIONARY_TYPE_INFO where ID = #{id}
</update>
 
<!-- 列表 -->
<select id="selectById"  resultMap="BaseResultMap" parameterType="java.lang.Long">
	select <include refid="Base_Column_List" /> 
	 from DICTIONARY_TYPE_INFO where ID = #{id}
</select>
  	
<!--  列表总数-->
<select id="selectByModelCount" resultType="java.lang.Integer"  parameterType="com.letv.portal.model.DictionaryTypeModel">
	select count(1) from DICTIONARY_TYPE_INFO 
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 根据id查询 -->
<select id="selectByModel" resultMap="BaseResultMap"  parameterType="com.letv.portal.model.DictionaryTypeModel">
	select 
	<include refid="Base_Column_List"/>
	from DICTIONARY_TYPE_INFO 
	<include refid="Example_Where_Clause"/>
	
</select>


<!--  列表总数-->
<select id="selectByMapCount" resultType="java.lang.Integer"  parameterType="java.util.Map">
	select count(1) from DICTIONARY_TYPE_INFO 
	<include refid="Example_Where_Clause"/>
</select>
<!-- 根据id查询 -->
<select id="selectByMap" resultMap="BaseResultMap"  parameterType="java.util.Map">
	select 
	<include refid="Base_Column_List"/>
	from DICTIONARY_TYPE_INFO 
	<include refid="Example_Where_Clause"/>
</select> 	
</mapper>   
