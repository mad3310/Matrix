<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.letv.portal.dao.IDbDao">
	<!-- Result Map -->
	<resultMap id="BaseResultMap" type="Db">
		<result column="ID" property="id" />
		<result column="DB_NAME" property="dbName" />
		<result column="CLUSTER_ID" property="clusterId" />
		<result column="STATUS" property="status" />
		
		<result column="IS_DELETED" property="isDeleted" />
		<result column="CREATE_TIME" property="createTime" />
		<result column="CREATE_USER" property="createUser" />
		<result column="UPDATE_TIME" property="updateTime" />
		<result column="UPDATE_USER" property="updateUser" />
		
		<association property="cluster" javaType="Mcluster">
			<result column="MCLUSTER_NAME" property="mclusterName" />
		</association>
		
	</resultMap>
	
	<resultMap id="createParams" type="java.util.Map">
		<result column="DB_NAME" property="dbName" />
		<result column="IP_ADDR" property="nodeIp" />
		<result column="ADMIN_USER" property="username" />
		<result column="ADMIN_PASSWORD" property="password" />
	</resultMap>
	<!-- WEBPORTAL_DB table all fields -->
	<sql id="Base_Column_List">
		ID,DB_NAME,CLUSTER_ID,STATUS,IS_DELETED,CREATE_TIME,CREATE_USER,UPDATE_TIME,UPDATE_USER
	</sql>
	<sql id="Base_Column_List_add_cluster">
		WEBPORTAL_DB.ID,WEBPORTAL_MCLUSTER_INFO.MCLUSTER_NAME,WEBPORTAL_DB.DB_NAME,WEBPORTAL_DB.CLUSTER_ID,WEBPORTAL_DB.STATUS,WEBPORTAL_DB.IS_DELETED,WEBPORTAL_DB.CREATE_TIME,WEBPORTAL_DB.CREATE_USER,WEBPORTAL_DB.UPDATE_TIME,WEBPORTAL_DB.UPDATE_USER
	</sql>

	
	<!-- 查询条件 -->
	<sql id="Example_Where_Clause">
		where 1=1
		<trim suffixOverrides=",">
			<if test="id != null  ">
				and ID=#{id}
			</if>
			<if test="dbName != null  and dbName != ''  and dbName != 'null'">
				and DB_NAME like CONCAT('%','${dbName}','%')
			</if>
			<if test="clusterId != null  ">
				and CLUSTER_ID=#{clusterId}
			</if>
			<if test="status != null  ">
				and STATUS=#{status}
			</if>
			<if test="isDeleted != null  ">
				and IS_DELETED=#{isDeleted}
			</if>
			<if test="createTime != null  ">
				and CREATE_TIME=#{createTime}
			</if>
			<if test="createUser != null  ">
				and CREATE_USER=#{createUser}
			</if>
			<if test="updateTime != null  ">
				and UPDATE_TIME=#{updateTime}
			</if>
			<if test="updateUser != null  ">
				and UPDATE_USER=#{updateUser}
			</if>
		</trim>
	</sql>


	<!-- 插入记录 -->
	<insert id="insert" parameterType="Db">
		insert into
		WEBPORTAL_DB(ID,DB_NAME,CLUSTER_ID,STATUS,IS_DELETED,CREATE_TIME,CREATE_USER,UPDATE_TIME,UPDATE_USER)
		values(
		<if test="id != null">
			#{id},
		</if>
		<if test="id == null">
			UUID(),
		</if>
		#{dbName},#{clusterId},'0','1',now(),#{createUser},now(),#{updateUser})
	</insert>

	<!-- 根据id，修改记录 -->
	<update id="update" parameterType="Db">
		update WEBPORTAL_DB set
		ID=#{id},DB_NAME=#{dbName},CLUSTER_ID=#{clusterId},STATUS=#{status},IS_DELETED=#{isDeleted},CREATE_TIME=#{createTime},CREATE_USER=#{createUser},UPDATE_TIME=now(),UPDATE_USER=#{updateUser}
		where ID=#{id}
	</update>

	<!-- -->
	<update id="updateBySelective" parameterType="Db">
		update WEBPORTAL_DB
		<set>
			<if test="dbName != null  and dbName != '' ">
				DB_NAME=#{dbName},
			</if>
			<if test="clusterId != null  ">
				CLUSTER_ID=#{clusterId},
			</if>
			<if test="status != null  ">
				STATUS=#{status},
			</if>
			<if test="isDeleted != null  ">
				IS_DELETED=#{isDeleted},
			</if>
			<if test="createTime != null  ">
				CREATE_TIME=#{createTime},
			</if>
			<if test="createUser != null  ">
				CREATE_USER=#{createUser},
			</if>
				UPDATE_TIME=now(),
			<if test="updateUser != null  ">
				UPDATE_USER=#{updateUser}
			</if>
		</set>
		where ID=#{id}
	</update>

	<!-- 物理删除 -->
	<update id="delete" parameterType="Db">
		delete from WEBPORTAL_DB where ID = #{id}
	</update>
	
	<!-- 逻辑删除，将deleted 改成 0或1 -->
	<update id="updateFlag" parameterType="Db">
		update WEBPORTAL_DB set
		<if test="isDeleted != null  ">
			IS_DELETED=#{isDeleted}
		</if>
		where ID = #{id}
	</update>
	
	<!--  审批状态 -->
	<update id="audit" parameterType="Db">
		update WEBPORTAL_DB
		<set>
			<if test="status != null  ">
				STATUS=#{status},
			</if>
			<if test="clusterId != null  ">
				CLUSTER_ID=#{clusterId}
			</if>
		</set>
		where ID = #{id}
	</update>

	<!-- 根据id查询-->
	<select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from WEBPORTAL_DB where ID = #{id}
	</select>

	<!-- 查询创建用户所需参数-->
	<select id="selectCreateParams" resultMap="createParams" parameterType="java.lang.String">
		select DB.DB_NAME,CONTAINER.IP_ADDR,MCLUSTER.ADMIN_USER,MCLUSTER.ADMIN_PASSWORD
		from WEBPORTAL_MCLUSTER_INFO MCLUSTER,WEBPORTAL_DB DB,WEBPORTAL_CONTAINER CONTAINER 
		where
		DB.CLUSTER_ID=MCLUSTER.ID AND MCLUSTER.ID=CONTAINER.CLUSTER_ID AND CONTAINER.ZOOKEEPER_ID='1' AND DB.ID=#{id}
	</select>
	<!-- 列表总数 -->
	<select id="selectByModelCount" resultType="java.lang.Integer"
		parameterType="Db">
		select count(1) from WEBPORTAL_DB
		<include refid="Example_Where_Clause" />
	</select>

	<!-- 根据条件查询 -->
	<select id="selectByModel" resultMap="BaseResultMap"
		parameterType="Db">
		select
		<include refid="Base_Column_List" />
		from DICTIONARY_INFO
		<include refid="Example_Where_Clause" />
	</select>


	<!-- 列表总数 -->
	<select id="selectByMapCount" resultType="java.lang.Integer"
		parameterType="java.util.Map">
		select count(1) from WEBPORTAL_DB
		<include refid="Example_Where_Clause" />
	</select>
	<!-- 根据条件查询 -->
	<select id="selectByMap" resultMap="BaseResultMap"
		parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from WEBPORTAL_DB
		<include refid="Example_Where_Clause" />
	</select>
	
	
	<sql id="Example_Page_Where_Clause">
		where 1=1
		<trim suffixOverrides=",">
			<if test="params != null and params.id !=null  ">
				and WEBPORTAL_DB.ID=#{params.id}
			</if>
			<if test="params != null and params.dbName != null  and params.dbName != ''  and params.dbName != 'null'">
				and WEBPORTAL_DB.DB_NAME like CONCAT('%','${params.dbName}','%')
			</if>
			<if test="params != null and params.clusterId != null  ">
				and WEBPORTAL_DB.CLUSTER_ID=#{params.clusterId}
			</if>
			<if test="params != null and params.status != null  ">
				and WEBPORTAL_DB.STATUS=#{params.status}
			</if>
			<if test="params != null and params.isDeleted != null  ">
				and WEBPORTAL_DB.IS_DELETED=#{params.isDeleted}
			</if>
			<if test="params != null and params.createTime != null  ">
				and WEBPORTAL_DB.CREATE_TIME=#{params.createTime}
			</if>
			<if test="params != null and params.createUser != null  ">
				and WEBPORTAL_DB.CREATE_USER=#{params.createUser}
			</if>
			<if test="params != null and params.updateTime != null  ">
				and WEBPORTAL_DB.UPDATE_TIME=#{params.updateTime}
			</if>
			<if test="params != null and params.updateUser != null  ">
				and WEBPORTAL_DB.UPDATE_USER=#{params.updateUser}
			</if>
		</trim>
	</sql>
	
	<!-- 分页：根据条件查询 -->
	<select id="selectPageByMap" resultMap="BaseResultMap"
		parameterType="com.letv.common.dao.QueryParam">
		select
		<include refid="Base_Column_List_add_cluster" />
		from WEBPORTAL_DB left join WEBPORTAL_MCLUSTER_INFO 
		on WEBPORTAL_MCLUSTER_INFO.ID = WEBPORTAL_DB.CLUSTER_ID
		<include refid="Example_Page_Where_Clause" />
		ORDER BY WEBPORTAL_DB.CREATE_TIME DESC
		<if test="page != null">
      		limit #{page.startRowPosition},#{page.recordsPerPage}
    	</if>
	</select>
</mapper>   