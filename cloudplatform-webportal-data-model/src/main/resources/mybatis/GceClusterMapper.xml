<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.letv.portal.dao.gce.IGceClusterDao">
	<!-- Result Map -->
	<resultMap id="BaseResultMap" type="GceCluster" >
		<result column="ID" property="id" />
		<result column="CLUSTER_NAME" property="clusterName" />
		<result column="ADMIN_USER" property="adminUser" />
		<result column="ADMIN_PASSWORD" property="adminPassword" />
		<result column="STATUS" property="status" />
		<result column="TYPE" property="type" />
		<result column="SST_PASSWORD" property="sstPwd" />
		<result column="HCLUSTER_ID" property="hclusterId" />
		<result column="DELETED" property="deleted" />
		<result column="CREATE_TIME" property="createTime" />
		<result column="CREATE_USER" property="createUser" />
		<result column="UPDATE_TIME" property="updateTime" />
		<result column="UPDATE_USER" property="updateUser" />
		<association property="createUserModel" javaType="User">
			<result column="USERNAME" property="userName" />
		</association>
		<association property="hcluster" javaType="Hcluster">
			<result column="HCLUSTER_NAME_ALIAS" property="hclusterNameAlias" />
		</association>
	</resultMap>
	<!-- other map -->
	<resultMap id="createParams" type="java.util.Map">
		<result column="DB_NAME" property="dbName" />
		<result column="IP_ADDR" property="nodeIp" />
		<result column="CREATE_USER" property="createUser" />
		<result column="ADMIN_USER" property="username" />
		<result column="ADMIN_PASSWORD" property="password" />
	</resultMap>
	<sql id="Base_Column_List">
		GC.ID,GC.CLUSTER_NAME,GC.ADMIN_USER,GC.ADMIN_PASSWORD,GC.STATUS,GC.TYPE,GC.SST_PASSWORD,GC.HCLUSTER_ID,GC.DELETED,GC.CREATE_TIME,GC.CREATE_USER,GC.UPDATE_TIME,GC.UPDATE_USER
	</sql>
	<!-- 查询条件 -->
	<sql id="Example_Where_Clause">
		where 1=1
		<trim suffixOverrides=",">
			<if test="id != null  ">
				and GC.ID=#{id}
			</if>
			<if test="clusterName != null  and clusterName != '' and clusterName != 'null'">
				and GC.CLUSTER_NAME like CONCAT('%','${clusterName}','%') escape '^'
			</if>
			<if test="status != null and status != ''">
				and GC.STATUS=#{status}
			</if>
			<if test="type != null  ">
				and GC.TYPE=#{type}
			</if>
			<if test="sstPwd != null  ">
				and GC.SST_PASSWORD=#{sstPwd}
			</if>
			<if test="hclusterId != null  ">
				and GC.HCLUSTER_ID=#{hclusterId}
			</if>
			<if test="deleted != null  ">
				and GC.DELETED=#{deleted}
			</if>
			<if test="createTime != null  ">
				and GC.CREATE_TIME=#{createTime}
			</if>
			<if test="createUser != null  ">
				and GC.CREATE_USER=#{createUser}
			</if>
			<if test="updateTime != null  ">
				and GC.UPDATE_TIME=#{updateTime}
			</if>
			<if test="updateUser != null  ">
				and GC.UPDATE_USER=#{updateUser}
			</if>
		</trim>
	</sql>
	
	<sql id="Example_Page_Where_Clause">
		where 1=1
		<trim suffixOverrides=",">
			<if test="params != null and params.id !=null  ">
				and GC.ID=#{params.id}
			</if>
			<if test="params != null and params.clusterName != null  and params.clusterName != '' and params.clusterName != 'null'">
				and GC.CLUSTER_NAME like CONCAT('%','${params.clusterName}','%') escape '^'
			</if>
			<if test="params != null and params.status != null and params.status != '' ">
				and GC.STATUS=#{params.status}
			</if>
			<if test="params != null and params.type != null  ">
				and GC.TYPE=#{params.type}
			</if>
			<if test="params != null and params.deleted != null  ">
				and GC.DELETED=#{params.deleted}
			</if>
			<if test="params != null and params.sstPwd != null  ">
				and GC.SST_PASSWORD=#{params.sstPwd}
			</if>
			<if test="params != null and params.hclusterId != null  ">
				and GC.HCLUSTER_ID=#{params.hclusterId}
			</if>
			<if test="params != null and params.createTime != null  ">
				and GC.CREATE_TIME=#{params.createTime}
			</if>
			<if test="params != null and params.createUser != null  ">
				and GC.CREATE_USER=#{params.createUser}
			</if>
			<if test="params != null and params.updateTime != null  ">
				and GC.UPDATE_TIME=#{params.updateTime}
			</if>
			<if test="params != null and params.updateUser != null  ">
				and GC.UPDATE_USER=#{params.updateUser}
			</if>
		</trim>
	</sql>

	<!-- 插入记录 -->
	<insert id="insert" parameterType="GceCluster" useGeneratedKeys="true" keyProperty="id">
		insert into
		WEBPORTAL_GCECLUSTER(CLUSTER_NAME,ADMIN_USER,ADMIN_PASSWORD,STATUS,TYPE,SST_PASSWORD,HCLUSTER_ID,DELETED,CREATE_TIME,CREATE_USER,UPDATE_TIME,UPDATE_USER)
		values(#{clusterName},#{adminUser},#{adminPassword},#{status},#{type},#{sstPwd},#{hclusterId},#{deleted},now(),#{createUser},now(),#{updateUser})
	</insert>

	<!-- 根据id，修改记录 -->
	<update id="update" parameterType="GceCluster">
		update WEBPORTAL_GCECLUSTER set
		CLUSTER_NAME=#{clusterName},ADMIN_USER=#{adminUser},ADMIN_PASSWORD=#{adminPassword},STATUS=#{status},TYPE=#{type},SST_PASSWORD=#{sstPwd},HCLUSTER_ID=#{hclusterId},DELETED=#{deleted},CREATE_TIME=#{createTime},CREATE_USER=#{createUser},UPDATE_TIME=now(),UPDATE_USER=#{updateUser}
		where ID=#{id}
	</update>

	<!--根据id，有选择的修改记录 -->
	<update id="updateBySelective" parameterType="GceCluster">
		update WEBPORTAL_GCECLUSTER
		<set>
			<if test="clusterName != null  and clusterName != '' ">
				CLUSTER_NAME=#{clusterName},
			</if>
			<if test="adminUser != null  ">
				ADMIN_USER=#{adminUser},
			</if>
			<if test="adminPassword != null  ">
				ADMIN_PASSWORD=#{adminPassword},
			</if>
			<if test="status != null  ">
				STATUS=#{status},
			</if>
			<if test="type != null  ">
				TYPE=#{type},
			</if>
			<if test="sstPwd != null  ">
				SST_PASSWORD=#{sstPwd},
			</if>
			<if test="hclusterId != null  ">
				HCLUSTER_ID=#{hclusterId},
			</if>
			<if test="deleted != null  ">
				DELETED=#{deleted},
			</if>
			<if test="createTime != null  ">
				CREATE_TIME=#{createTime},
			</if>
			<if test="createUser != null  ">
				CREATE_USER=#{createUser},
			</if>
				UPDATE_TIME=now(),
			<if test="updateUser != null  ">
				UPDATE_USER=#{updateUser}
			</if>
		</set>
		where ID=#{id}
	</update>
</mapper>   
