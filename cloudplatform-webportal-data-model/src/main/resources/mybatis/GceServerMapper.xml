<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mappes.dtd">
<mapper namespace="com.letv.portal.dao.gce.IGceServerDao">
	<!-- Result Map -->
	<resultMap id="BaseResultMap" type="GceServer">
		<result column="ID" property="id" />
	
		<result column="GCE_NAME" property="gceName" />
		<result column="GCECLUSTER_ID" property="gceClusterId" />
		<result column="HCLUSTER_ID" property="hclusterId" />
		<result column="PORT_FORWARD" property="portForward" />
		<result column="GCE_IMAGE_NAME" property="gceImageName" />
		<result column="STATUS" property="status" />
		<result column="DESCN" property="descn" />
		<result column="IP" property="ip" />
			
		<result column="DELETED" property="deleted" />
		<result column="CREATE_TIME" property="createTime" />
		<result column="CREATE_USER" property="createUser" />
		<result column="UPDATE_TIME" property="updateTime" />
		<result column="UPDATE_USER" property="updateUser" />
		
		<association property="gceCluster" javaType="GceCluster">
			<result column="CLUSTER_NAME" property="clusterName" />
		</association>
		<association property="hcluster" javaType="Hcluster">
			<result column="HCLUSTER_NAME_ALIAS" property="hclusterNameAlias" />
		</association>
		<association property="createUserModel" javaType="User">
			<result column="USERNAME" property="userName" />
		</association>
	
	</resultMap>
	
	<sql id="Base_Column_List">
		s.ID,
		s.GCE_NAME,s.GCECLUSTER_ID,s.HCLUSTER_ID,s.PORT_FORWARD,s.GCE_IMAGE_NAME,s.STATUS,s.DESCN,s.IP,
		s.DELETED,s.CREATE_TIME,s.CREATE_USER,s.UPDATE_TIME,s.UPDATE_USER
	</sql>
	
	<!-- 查询条件 -->
	<sql id="Example_Where_Clause">
		where 1=1
		<trim suffixOverrides=",">
			<if test="id != null  ">
				and s.ID=#{id}
			</if>
			
			<if test="gceName != null and gceName != '' ">
				and s.GCE_NAME like CONCAT('%','${gceName}','%') escape '^'
			</if>
			
			<if test="gceClusterId != null  ">
				and s.GCECLUSTER_ID=#{gceClusterId}
			</if>
			<if test="hclusterId != null  ">
				and s.HCLUSTER_ID=#{hclusterId}
			</if>
			<if test="portForward != null and portForward != ''">
				and s.HCLUSTER_ID=#{portForward}
			</if>
			<if test="gceImageName != null and gceImageName != '' ">
				and s.HCLUSTER_ID=#{gceImageName}
			</if>
			<if test="status != null and status != ''  ">
				and s.STATUS=#{status}
			</if>
			<if test="ip != null and ip != ''  ">
				and s.IP=#{ip}
			</if>
			
			<if test="deleted != null  ">
				and s.DELETED=#{deleted}
			</if>
			<if test="createTime != null  ">
				and s.CREATE_TIME=#{createTime}
			</if>
			<if test="createUser != null  ">
				and s.CREATE_USER=#{createUser}
			</if>
			<if test="updateTime != null  ">
				and s.UPDATE_TIME=#{updateTime}
			</if>
			<if test="updateUser != null  ">
				and s.UPDATE_USER=#{updateUser}
			</if>
			
		</trim>
	</sql>


	<!-- 插入记录 -->
	<insert id="insert" parameterType="GceServer" useGeneratedKeys="true" keyProperty="id" >
		insert into
		WEBPORTAL_GCE(
			GCE_NAME,GCECLUSTER_ID,HCLUSTER_ID,PORT_FORWARD,GCE_IMAGE_NAME,STATUS,DESCN,IP,
			DELETED,CREATE_TIME,CREATE_USER,UPDATE_TIME,UPDATE_USER)
		values(
			#{gceName},#{gceClusterId},#{hclusterId},#{portForward},#{gceImageName},#{status},#{descn},#{ip},
			#{deleted},now(),#{createUser},#{updateTime},#{updateUser})
	</insert>

	<!-- -->
	<update id="updateBySelective" parameterType="GceServer">
		update WEBPORTAL_GCE
		<set>
			<if test="id != null  ">
				ID=#{id},
			</if>
			<if test="gceName != null  ">
				GCE_NAME=#{gceName},
			</if>
			<if test="gceClusterId != null  ">
				GCECLUSTER_ID=#{gceClusterId},
			</if>
			<if test="hclusterId != null  ">
				HCLUSTER_ID=#{hclusterId},
			</if>
			<if test="portForward != null ">
				and s.HCLUSTER_ID=#{portForward}
			</if>
			<if test="gceImageName != null ">
				and s.HCLUSTER_ID=#{gceImageName}
			</if>
			<if test="status != null  ">
				STATUS=#{status},
			</if>
			<if test="descn != null  ">
				DESCN=#{descn},
			</if>
			<if test="ip != null  ">
				IP=#{ip},
			</if>
			
			<if test="deleted != null  ">
				DELETED=#{deleted},
			</if>
			<if test="createTime != null  ">
				CREATE_TIME=#{createTime},
			</if>
			<if test="createUser != null  ">
				CREATE_USER=#{createUser},
			</if>
				UPDATE_TIME=#{updateTime},
			<if test="updateUser != null  ">
				UPDATE_USER=#{updateUser},
			</if>
		</set>
		where ID=#{id}
	</update>

	<!-- 物理删除 -->
	<update id="delete" parameterType="GceServer">
		delete from WEBPORTAL_GCE where ID = #{id}
	</update>
	
	<!-- 根据id查询-->
	<select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
	        select
			<include refid="Base_Column_List" /> 
			,n.CLUSTER_NAME,u.USERNAME,h.HCLUSTER_NAME_ALIAS
			from WEBPORTAL_GCE s ,WEBPORTAL_GCECLUSTER n,WEBPORTAL_USER u,WEBPORTAL_HCLUSTER h 
			where s.CREATE_USER=u.id and s.ID = #{id} and n.ID = s.GCECLUSTER_ID and s.HCLUSTER_ID = h.ID
	</select>
	
	
	<!-- 列表总数 -->
	<select id="selectByMapCount" resultType="java.lang.Integer"
		parameterType="java.util.Map">
		select count(1) from WEBPORTAL_GCE s
		<include refid="Example_Where_Clause" />
	</select>
	<!-- 根据条件查询 -->
	<select id="selectByMap" resultMap="BaseResultMap"
		parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from WEBPORTAL_GCE s
		<include refid="Example_Where_Clause" />
	</select>
	
	
	<sql id="Example_Page_Where_Clause">
		where 1=1
		<trim suffixOverrides=",">
			<if test="params != null and params.id !=null  ">
				and s.ID=#{params.id}
			</if>
			<if test="params != null and params.gceName != null  and params.gceName != ''  and params.gceName != 'null'">
				and s.GCE_NAME like CONCAT('%','${params.gceName}','%') escape '^'
			</if>
			
			<if test="params != null and params.gceClusterId != null  ">
				and s.GCECLUSTER_ID=#{params.gceClusterId}
			</if>
			<if test="params != null and params.hclusterId != null  ">
				and s.HCLUSTER_ID=#{params.hclusterId}
			</if>
			<if test="params != null and params.portForward != null and params.portForward != ''">
				and s.HCLUSTER_ID=#{params.portForward}
			</if>
			<if test="params != null and params.gceImageName != null and params.gceImageName != '' ">
				and s.HCLUSTER_ID=#{params.gceImageName}
			</if>
			<if test="params != null and params.status != null  ">
				and s.STATUS=#{params.status}
			</if>
			<if test="params != null and params.descn != null  ">
				and s.DESCN=#{params.descn}
			</if>
			<if test="params != null and params.ip != null  ">
				and s.IP=#{params.ip}
			</if>
			<if test="params != null and params.deleted != null  ">
				and s.DELETED=#{params.deleted}
			</if>
			<if test="params != null and params.createTime != null  ">
				and s.CREATE_TIME=#{params.createTime}
			</if>
			<if test="params != null and params.createUser != null  ">
				and s.CREATE_USER=#{params.createUser}
			</if>
			<if test="params != null and params.updateTime != null  ">
				and s.UPDATE_TIME=#{params.updateTime}
			</if>
			<if test="params != null and params.updateUser != null  ">
				and s.UPDATE_USER=#{params.updateUser}
			</if>
		</trim>
	</sql>
	
	<!-- 分页：根据条件查询 -->
	<select id="selectPageByMap" resultMap="BaseResultMap"
		parameterType="com.letv.common.dao.QueryParam">
		select
		<include refid="Base_Column_List" />
		,n.CLUSTER_NAME,u.USERNAME,h.HCLUSTER_NAME_ALIAS
		from WEBPORTAL_GCE s 
		left join WEBPORTAL_GCECLUSTER n on n.ID = s.GCECLUSTER_ID 
		left join WEBPORTAL_USER u on s.CREATE_USER = u.ID
		left join WEBPORTAL_HCLUSTER h on s.HCLUSTER_ID = h.ID
		<include refid="Example_Page_Where_Clause" />
		ORDER BY s.CREATE_TIME DESC
		<if test="page != null">
      		limit #{page.startRowPosition},#{page.recordsPerPage}
    	</if>
	</select>
	
</mapper>   