<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.letv.portal.dao.gce.IGceContainerDao">

	<!-- Result Map -->
	<resultMap id="BaseResultMap" type="GceContainer">
		<result column="ID" property="id" />
		<result column="CONTAINER_NAME" property="containerName" />
		<result column="MOUNT_DIR" property="mountDir" />
		<result column="ZOOKEEPER_ID" property="zookeeperId" />
		<result column="IP_ADDR" property="ipAddr" />
		<result column="GATE_ADDR" property="gateAddr" />
		<result column="IP_MASK" property="ipMask" />
		<result column="TYPE" property="type" />
		<result column="DISK_SIZE" property="diskSize" />
		<result column="CORES_NUMBER" property="coresNumber" />
		<result column="CPU_SPEED" property="cpuSpeed" />
		<result column="MEMORY_SIZE" property="memorySize" />
		<result column="BIND_CONTAINER_PORT" property="bindContainerPort" />
		<result column="BIND_HOST_PORT" property="bingHostPort" />
		<result column="BIND_HOST_IP" property="bingHostIp" />
		<result column="CONTAINER_UUID" property="containerUuid" />
		<result column="HOST_ID" property="hostId" />
		<result column="HOST_IP" property="hostIp" />
		<result column="GCECLUSTER_ID" property="mclusterId" />
		<result column="ZABBIXHOSTS" property="zabbixHosts" />
		
		<result column="STATUS" property="status" />
		<result column="DELETED" property="deleted" />
		<result column="CREATE_TIME" property="createTime" />
		<result column="CREATE_USER" property="createUser" />
		<result column="UPDATE_TIME" property="updateTime" />
		<result column="UPDATE_USER" property="updateUser" />
		
		<association property="host" javaType="Host">
			<result column="HOST_NAME" property="hostName" />
			<result column="HOST_NAME_ALIAS" property="hostNameAlias" />
			<result column="HCLUSTER_ID" property="hclusterId" />
		</association>
		
	    <association property="gceCluster" javaType="GceCluster">
			<result column="GCECLUSTER_NAME" property="gceClusterName" />
		</association>
		
	    <association property="hcluster" javaType="Hcluster">
			<result column="HCLUSTER_NAME_ALIAS" property="hclusterNameAlias" />
		</association>
	</resultMap>
	
	
	
	<!-- WEBPORTAL_GCECONTAINER GC table all fields -->
	<sql id="Base_Column_List">
		GC.ID,GC.CONTAINER_NAME,GC.MOUNT_DIR,GC.ZOOKEEPER_ID,GC.IP_ADDR,GC.GATE_ADDR,GC.IP_MASK,GC.TYPE,GC.ZABBIXHOSTS,GC.BIND_HOST_PORT,GC.BIND_HOST_IP,GC.CONTAINER_UUID,GC.BIND_CONTAINER_PORT,
		GC.DISK_SIZE,GC.CORES_NUMBER,GC.MEMORY_SIZE,GC.CPU_SPEED,GC.HOST_ID,GC.HOST_IP,GC.GCECLUSTER_ID,GC.STATUS,GC.DELETED,GC.CREATE_TIME,GC.CREATE_USER,GC.UPDATE_TIME,GC.UPDATE_USER
	</sql>
	<!-- 查询条件 -->
	<sql id="Example_Where_Clause">
		where 1=1
		<trim suffixOverrides=",">
			<if test="id != null  ">
				and GC.ID=#{id}
			</if>
			<if test="containerName != null  and containerName != '' and containerName != 'null'">
				and GC.CONTAINER_NAME like CONCAT('%','${containerName}','%')
			</if>
			<if test="type != null ">
				and GC.TYPE=#{type}
			</if>
			<if test="ipAddr != null ">
				and GC.IP_ADDR=#{ipAddr}
			</if>
			<if test="mclusterId != null ">
				and GC.GCECLUSTER_ID=#{mclusterId}
			</if>
			<if test="zookeeperId != null ">
				and GC.ZOOKEEPER_ID=#{zookeeperId}
			</if>
		</trim>
	</sql>
	<!-- 插入记录 -->
	<insert id="insert" parameterType="GceContainer" useGeneratedKeys="true" keyProperty="id">
		insert into
		WEBPORTAL_GCECONTAINER
		(CONTAINER_NAME,MOUNT_DIR,ZOOKEEPER_ID,IP_ADDR,GATE_ADDR,IP_MASK,TYPE,BIND_CONTAINER_PORT,BIND_HOST_PORT,BIND_HOST_IP,CONTAINER_UUID
		DISK_SIZE,CORES_NUMBER,MEMORY_SIZE,CPU_SPEED,HOST_ID,HOST_IP,GCECLUSTER_ID,STATUS,DELETED,CREATE_TIME,CREATE_USER,UPDATE_TIME,UPDATE_USER)
		values
		(#{containerName},#{mountDir},#{zookeeperId},#{ipAddr},#{gateAddr},#{ipMask},#{type},#{bindContainerPort},#{bingHostPort},#{bingHostIp},#{containerUuid}
		#{diskSize},#{coresNumber},#{memorySize},#{cpuSpeed},#{hostId},#{hostIp},#{mclusterId},#{status},${deleted},now(),#{createUser},now(),#{updateUser})
	</insert>
	
	<!-- 根据id，修改记录 -->
	<update id="update" parameterType="GceContainer">
		update WEBPORTAL_GCECONTAINER set
		CONTAINER_NAME=#{containerName},MOUNT_DIR=#{mountDir},ZOOKEEPER_ID=#{zookeeperId},IP_ADDR=#{ipAddr},GATE_ADDR=#{gateAddr},IP_MASK=#{ipMask},
		BIND_CONTAINER_PORT=#{bindContainerPort},BIND_HOST_PORT=#{bingHostPort},BIND_HOST_IP=#{bingHostIp},CONTAINER_UUID=#{containerUuid},
		TYPE=#{type},DISK_SIZE=#{diskSize},CORES_NUMBER=#{coresNumber},MEMORY_SIZE=#{memorySize},CPU_SPEED=#{cpuSpeed},HOST_ID=#{hostId},HOST_IP=#{hostIp},GCECLUSTER_ID=#{mclusterId},
		STATUS=#{status},DELETED=#{deleted},CREATE_TIME=#{createTime},CREATE_USER=#{createUser},UPDATE_TIME=now(),UPDATE_USER=#{updateUser}
		where ID=#{id}
	</update>
	
	<update id="updateHostIpByName" parameterType="GceContainer">
		update WEBPORTAL_GCECONTAINER
		<set>
			<if test="hostId != null  ">
				HOST_ID=#{hostId},
			</if>
			<if test="hostIp != null  ">
				HOST_IP=#{hostIp},
			</if>
		</set>
		where CONTAINER_NAME=#{containerName}
	</update>

	<!--根据id，有选择的修改记录 -->
	<update id="updateBySelective" parameterType="GceContainer">
		update WEBPORTAL_GCECONTAINER
		<set>
			<if test="containerName != null  and containerName != '' ">
				CONTAINER_NAME=#{containerName},
			</if>
			<if test="mountDir != null  ">
				MOUNT_DIR=#{mountDir},
			</if>
			<if test="zookeeperId != null  ">
				ZOOKEEPER_ID=#{zookeeperId},
			</if>
			<if test="ipAddr != null  ">
				IP_ADDR=#{ipAddr},
			</if>
			<if test="gateAddr != null  ">
				GATE_ADDR=#{gateAddr},
			</if>
			<if test="ipMask != null  ">
				IP_MASK=#{ipMask},
			</if>
			<if test="type != null  ">
				TYPE=#{type},
			</if>
			<if test="diskSize != null  ">
				DISK_SIZE=#{diskSize},
			</if>
			<if test="coresNumber != null  ">
				CORES_NUMBER=#{coresNumber},
			</if>
			<if test="memorySize != null  ">
				MEMORY_SIZE=#{memorySize},
			</if>
			<if test="cpuSpeed != null  ">
				CPU_SPEED=#{cpuSpeed},
			</if>
			<if test="hostId != null  ">
				HOST_ID=#{hostId},
			</if>
			<if test="hostIp != null  ">
				HOST_IP=#{hostIp},
			</if>
			<if test="mclusterId != null  ">
				GCECLUSTER_ID=#{mclusterId},
			</if>
			<if test="bindContainerPort != null  ">
				BIND_CONTAINER_PORT=#{bindContainerPort},
			</if>
			<if test="bingHostPort != null  ">
				BIND_HOST_PORT=#{bingHostPort},
			</if>
			<if test="bingHostIp != null  ">
				BIND_HOST_IP=#{bingHostIp},
			</if>
			<if test="containerUuid != null  ">
				CONTAINER_UUID=#{containerUuid},
			</if>
			<if test="status != null  ">
				STATUS=#{status},
			</if>
			<if test="deleted != null  ">
				DELETED=#{deleted},
			</if>
			<if test="createTime != null  ">
				CREATE_TIME=#{createTime},
			</if>
			<if test="createUser != null  ">
				CREATE_USER=#{createUser},
			</if>
				UPDATE_TIME=now(),
			<if test="updateUser != null  ">
				UPDATE_USER=#{updateUser}
			</if>
			<if test="zabbixHosts != null  ">
				ZABBIXHOSTS=#{zabbixHosts}
			</if>
		</set>
		where ID=#{id}
	</update>
	
	<!-- 物理删除 -->
	<update id="delete" parameterType="GceContainer">
		delete from WEBPORTAL_GCECONTAINER where ID = #{id}
	</update>
	
	<!-- 逻辑删除，将deleted 改成 0或1 -->
	<update id="deleteFlag" parameterType="GceContainer">
		update WEBPORTAL_GCECONTAINER set
		<if test="deleted != null  ">
			DELETED=#{deleted}
		</if>
		where ID = #{id}
	</update>

	<!-- 根据id查询-->
	<select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		from WEBPORTAL_GCECONTAINER GC where GC.ID = #{id}
	</select>
	<!-- 根据clusterId查询-->
	<select id="selectByMclusterId" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		,M.MCLUSTER_NAME 
		from WEBPORTAL_GCECONTAINER GC left join WEBPORTAL_MCLUSTER_INFO M
		ON M.ID = GC.GCECLUSTER_ID
		where GC.GCECLUSTER_ID = #{gceClusterId} ORDER BY GC.TYPE,GC.ZOOKEEPER_ID
	</select>
	<!-- 物理删除 -->
	<update id="deleteByMclusterId" parameterType="java.lang.Long">
		delete from WEBPORTAL_GCECONTAINER where GCECLUSTER_ID = #{mclusterId}
	</update>	
	
	<!-- 根据条件查询 -->
	<select id="selectByMap" resultMap="BaseResultMap" parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from WEBPORTAL_GCECONTAINER GC
		<include refid="Example_Where_Clause" />
	</select>
	
	
	<!-- 根据条件查询 -->
	<select id="selectAllByMap" resultMap="BaseResultMap" parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />,M.MCLUSTER_NAME,H.HOST_NAME,H.HOST_NAME_ALIAS,U.HCLUSTER_NAME_ALIAS,H.HCLUSTER_ID
		from WEBPORTAL_GCECONTAINER GC,WEBPORTAL_MCLUSTER_INFO M,WEBPORTAL_HOST H,WEBPORTAL_HCLUSTER U
		where 1=1
		<if test="containerName != null  and containerName != '' and containerName != 'null'">
			and GC.CONTAINER_NAME like CONCAT('%','${containerName}','%')
		</if>
		<if test="type != null ">
			and GC.TYPE=#{type}
		</if>
		<if test="ipAddr != null and ipAddr != ''">
			and GC.IP_ADDR like CONCAT('%','${ipAddr}','%') escape '^'
		</if>
		<if test="mclusterId != null ">
			and GC.GCECLUSTER_ID=#{mclusterId}
		</if>
		and GC.GCECLUSTER_ID=M.Id and GC.HOST_ID=H.ID and H.HCLUSTER_ID=U.ID
	</select>
	
	<select id="selectVipIps4Monitor" resultMap="BaseResultMap" parameterType="java.util.Map">
		select
		GC.IP_ADDR
		from WEBPORTAL_GCECONTAINER GC,WEBPORTAL_MCLUSTER_INFO M
		where 
		GC.GCECLUSTER_ID=M.Id and GC.TYPE='mclustervip'
	</select>
	
		<!--查询集群下container的信息-->
	<select id="selectContainerByMclusterId" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		from WEBPORTAL_GCECONTAINER GC ,WEBPORTAL_MCLUSTER_INFO M 
		where GC.GCECLUSTER_ID=M.ID and M.ID=#{mclusterId}
	</select>
</mapper>   
