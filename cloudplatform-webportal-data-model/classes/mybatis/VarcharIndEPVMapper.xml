<select id="selectByModelCount" resultType="java.lang.Integer"  parameterType="VarcharIndEPV">
	select count(1) from PPV_PROPERTY_VALUE_VARCHAR_INDEX 
	<include refid="Example_Where_Clause"/>
</select>
  	
